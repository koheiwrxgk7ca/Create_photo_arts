  <div style = "background-color: #FFF;">
    <div class = "p-2">
      <h3>ユーザー一覧画面</h3>

      <!--ユーザー検索-->
      <%= render 'public/users/sarch_users', q: @q, path: admin_top_path %>

      <div class = 'pt-3 pb-3'>
        <% @users.each do |user| %>
          <ul class="list-group">
            <li class="list-group-item">
              <div class = 'row'>
                <div class = 'col-6'>
                  <div class = 'row'>
                    <div class = 'col-5'>
                      ID <%= user.id %>
                    </div>
                    <div class = 'col-md-7'>
                      <%= link_to admin_user_path(user) do %>
                        <%= user.name %>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class = 'col-sm-12 col-md-6'>
                  <div class = 'row'>
                    <div class = 'col-9'>
                      <%= user.email %>
                    </div>
                    <div class = 'col-md-3'>
                      <% if user.is_deleted == false %>
                       <p class = text-success>有効</p>
                      <% else %>
                       <p class = text-danger>退会</p>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        <% end %>
      </div>

      <div class = "d-flex justify-content-center">
          <%= paginate @users %>
      </div>
    </div>
  </div>