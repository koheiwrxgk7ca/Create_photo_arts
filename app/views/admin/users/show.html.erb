  <div style = "background-color: #FFF;">
    <div class = "p-2">
    <h3><%= @user.name %>さんの会員詳細</h3>

    <table class = "table">
      <tr>
        <th>
          <p>会員ID</p>
        </th>
        <td>
          <p><%= @user.id %></p>
        </td>
      </tr>

      <tr>
        <th>
          <p>ニックネーム</p>
        </th>
        <td>
          <p><%= @user.name %></p>
        </td>
      </tr>


      <tr>
        <th>
          <p>メールアドレス</p>
        </th>
        <td>
          <p><%= @user.email %></p>
        </td>
      </tr>

      <tr>
        <th>
          <p>会員ステータス</p>
        </th>
        <td>
          <% if @user.is_deleted == false %>
           <p class = text-success>有効</p>
          <% else %>
           <p class = text-danger>退会</p>
          <% end %>
        </td>
      </tr>

      <tr>
        <td>
          <p><%= link_to "情報編集", edit_admin_user_path(@user.id), class:"btn btn-sm btn-success" %></p>
        </td>
        <td>
          <p><%= link_to "会員一覧へ", admin_top_path, class:"btn btn-sm btn-primary" %></p>
        </td>
      </tr>
    </table>
    </div>
  </div>