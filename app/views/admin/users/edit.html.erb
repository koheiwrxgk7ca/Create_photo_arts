  <div class = 'row'>
    <div class = 'col-sm-10 col-md-8 col-lg-6 col-xl-4'>
      <h3><%= @user.name %>さんの情報編集</h3>
      <%= form_with model:@user, url: admin_user_path, local:true do |f| %>

        <div class = 'ml-3'>
          <div class = 'row align-items-end'>
            <div class = 'col-sm-6'>
              <%= f.label :name, "ニックネーム" %>
            </div>
            <div class = 'col-sm-6'>
              <%= f.text_field :name, class: "form-control name" %>
            </div>
          </div><br>

          <div class = 'row align-items-end'>
            <div class = 'col-sm-6'>
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class = 'col-sm-6'>
              <%= f.text_field :email, class: "form-control email" %>
            </div>
          </div><br>

          <div class = 'row align-items-end'>
            <div class = 'col-sm-6'>
              <%= f.label :is_deleted, "会員ステータス" %><br>
            </div>
            <div class = 'col-sm-6'>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効" %>

              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会" %>
            </div>
          </div><br>
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>

    <div class = 'col-xl-8'>
      <div class='row'>
        <div class = 'col'>
          <h3><%= @user.name %>さんの投稿一覧</h3>
          <% @photos.each do |photo| %>
            <div class="card shadow-sm" style="width: 330px; float: left; margin: 5px 5px 5px 0; padding: 15px;">
              <div class = 'row'>
                <div class = 'col'>
                  <%= image_tag photo.photo_image, size:"300x200" %><br>
                  <%= photo.opinion %><br>
                  <%= link_to "投稿を削除", photo_path(photo), method: :delete, "data-confirm" => "really?", class:"btn btn-sm btn-danger" %>
                </div>
              </div>
           </div>
          <% end %>
        </div>
      </div><br>

      <div class = "d-flex justify-content-center">
        <%= paginate @photos %>
      </div>

    </div>
  </div>
