  <div class="signup-container", style= "padding:50px 0px 50px;">
    <div class= "d-flex justify-content-center h-100">
      <div class= "card">
        <div class= "card-header">
          <h2>新規登録画面</h2>
        </div>

        <div class= "card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group">
            <i class= "fas fa-user"></i>
            <%= f.label :name, "ニックネーム" %>
            <div class="form-control">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", size: "55" %>
            </div>
          </div>

          <div class="form-group">
            <i class="fas fa-mail-bulk"></i>
            <%= f.label :email, "メールアドレス" %>
            <div class="form-control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "55" %>
            </div>
          </div>

          <div class="form-group">
            <i class = "fas fa-key"></i>
            <%= f.label :password, "パスワード(6文字以上)" %>
            <div class="form-control">
            <%= f.password_field :password, autocomplete: "new-password", size: "55" %>
            </div>
          </div>

          <div class="form-group">
            <i class="fas fa-check-double"></i>
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
            <div class="form-control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "55" %>
          </div>
          </div>

          <div class="actions text-right">
            <%= f.submit "新規登録", class:"btn btn-sm btn-primary" %>
          </div>
        <% end %>

        <%= render "public/shared/links", class:"btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  </div>
