  <div class='row'>
    <div class='col-sm-10'>
      <!--自身のページならマイページを、他のユーザーならユーザーページと表示させる-->
      <% if @user == current_user %>
       <h3>Mypage</h3>
      <% else %>
       <h3>Userpage</h3>
      <% end %>
    </div>

    <!--新規投稿画面アイコン-->
    <%= render 'public/photos/new_post_btn' %>
  </div><br>

  <div class='row align-items-end'>
    <div class="col-sm=5 col-md-10 col-lg-4">
      <!--ユーザーのプロフィール写真-->
      <%= image_tag @user.get_profile_image, size: '100x100' %><br>
      <!--ユーザーネーム-->
      <%= @user.name %><br><br>

      <div class="mr-4">
        <div class="d-flex justify-content-between">
          <span>投稿</span>
          <span><%= @user.photos.count %></span>
        </div>
        <div class="d-flex justify-content-between">
          <span><%=link_to"フォロワー",user_followers_path(@user) %></span>
          <span><%= @user.followers.count %></span>
        </div>
        <div class="d-flex justify-content-between">
          <span><%=link_to"フォロー",user_followings_path(@user) %></span>
          <span><%= @user.followings.count %></span>
        </div>
      </div>

      <!--自己紹介文-->
      <% if @user.introduction.present? %>
        <%= @user.introduction %><br><br>
      <% else %>
        <br>
      <% end %>
    </div>

    <div class ='col-lg-6'>
    <!--マイページなら編集リンクを、他のユーザーならフォローリンクを表示-->
      <% if @user == current_user %>
        <div class='row'>
          <div class='col-sm-6'>
            <p><%= link_to "プロフィール編集",edit_user_path(@user), class:"btn btn-sm btn-success" %></p>
          </div>
          <div class='col-md-6'>
            <p><%=link_to"いいね一覧",favorites_user_path(@user), class:"btn btn-sm btn-success" %></p>
          </div>
        </div>
      <% else %>
        <div class='row'>
          <div class='col-sm-6'>
            <div id = "relationship_buttons_<%= @user.id %>">
              <%= render 'public/relationships/relationships', user: @user %>
            </div>
          </div>
          <div class='col-md-6'>
            <p><%=link_to"いいね一覧",favorites_user_path(@user), class:"btn btn-sm btn-success" %></p>
          </div>
        </div>
      <% end %>

      <p>投稿一覧</p>
      <!--投稿検索フォーム-->
      <%= render 'public/photos/sarch_photos', prefectures: @prefectures, path: user_path(@user) %>
    </div>
  </div>

  <!--ユーザーの投稿表示-->
  <%= render 'public/photos/photos_table', photos: @photos %>