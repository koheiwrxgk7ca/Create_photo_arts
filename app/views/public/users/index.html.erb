  <h3>Users</h3><br>

  <!--ユーザー検索-->
  <!--部分テンプレート-->
  <%= render 'public/users/sarch_users', q: @q, path: :users_path %>
  <%= search_form_for @q, url: users_path do |f| %>
   <%= f.search_field :name_cont, placeholder: 'ユーザー検索' %>
   <%= f.submit %>
  <% end %>
  <!--ここまで-->

<!--部分テンプレート-->
  <table class = "table">
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image, size: '100x100' %>
      </td>
      <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <% unless user == current_user %>
          <% if current_user.following?(user) %>
            <p><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-success" %></p>
          <% else %>
            <p><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-success" %></p>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
<!--ここまで-->
