  <div class='row'>
    <div class='col-4'>
      <h3>Users</h3>
    </div>

    <div class='col-2'>
      <!--新規投稿画面アイコン-->
      <%= link_to new_photo_path do %>
        <h4><i class="fas fa-plus-circle"></i></h4>
      <% end %>
    </div>
  </div>

  <% @users.each do |user| %>
  <table class = "table">
    <tr>
      <td>
        <%= image_tag user.get_profile_image, size: '100x100' %>
      </td>
      <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <P>フォロー中</P>
      </td>
    </tr>
  </table>
  <% end %>

