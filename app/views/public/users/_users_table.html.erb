  <table class = "table">
    <% users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image, size: '100x100' %>
      </td>
      <td>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <% unless user == current_user %>
          <% if current_user.following?(user) %>
            <p><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-success" %></p>
          <% else %>
            <p><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-success" %></p>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>

  <div class="row">
    <div class="col">
      <%= paginate users %>
    </div>
  </div>