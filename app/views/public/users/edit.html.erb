<h3>プロフィール編集</h3>

<%= form_with model: @user, local:true do |f| %>

  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name, placeholder:"ニックネーム"%><br>

  <%= f.label :introduction, "Introduction" %><br>
  <%= f.text_area :introduction, placeholder:"自己紹介"%><br>

  <%= f.label :profile_image, "ProfileImage" %><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br><br>

  <%= f.submit "変更を保存" %>

<% end %>