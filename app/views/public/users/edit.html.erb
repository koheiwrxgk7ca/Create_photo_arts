  <div style = "background-color: #FFF;">

    <div class = "p-2">
      <h3>User edit</h3>

      <div class= "p-4">
      <%= form_with model: @user, local:true do |f| %>

        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name, placeholder:"ニックネーム", size: "53" %><br>

        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction, placeholder:"自己紹介", size: "55" %><br>

        <%= f.label :profile_image, "ProfileImage" %><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br><br>

        <%= f.submit "変更を保存" %>

      <% end %>
    </div>
    </div>
  </div>